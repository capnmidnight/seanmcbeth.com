*
  box-sizing border-box

html, body
  position absolute
  margin 0
  padding 0
  border 0
  width 100%
  height 100%

body
  font-family -apple-system, '.SFNSText-Regular', 'San Francisco', 'Roboto', 'Segoe UI', 'Helvetica Neue', 'Lucida Grande', sans-serif
  font-size 12pt
  line-height 1.5
  background-color #E9F7FF
  color #625747

main
  padding 3em

  img
    width 80vw

#menu
  text-align center

  ul
    padding 0
    margin 0
    list-style-type none
    column-count 2
    font-size 10pt

    li > a
      display inline-block
      padding 1em
      margin 2px
      text-decoration none
      width 100%
      background-color white
      border solid 1px #8DBAD3


@media(min-width 640px)
  #menu > ul
    column-count 4

  #portrait
    max-width 50%
    float right
    margin-left 5em

a[href]
  color black
