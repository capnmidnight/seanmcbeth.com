<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ImageViewer</title>
    <link rel="stylesheet" href="~/js/Pages/Shared/index.css"></script>
    <script type="module" src="~/js/Pages/Shared/index.js"></script>

    @await RenderSectionAsync("Head", required: false)
</head>
<body>
    <header>
        @await RenderSectionAsync("Header", required: false)
    </header>
    <div class="scroll">
        <main>
            <button id="closeBtn">Close</button>
            @RenderBody()
        </main>
    </div>

    <footer>
        @await RenderSectionAsync("Footer", required: false)
    </footer>
</body>
</html>