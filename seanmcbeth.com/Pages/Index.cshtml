        <figure>
            <h3><a href="@href">@title</a></h3>
            <a href="@href"><img src="@screenshot" alt="Screenshot of @name" title="@shortTitle" /></a>
            <figcaption>@description</figcaption>
            <a href="@href">Read more&hellip;</a>
