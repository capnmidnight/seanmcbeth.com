@page "{name}"
@model AppModel
@{
    ViewData["Title"] = Model.Name;
}

@section Head {
    <meta name="twitter:card" content="summary_large_image">
    <meta property="og:image" content="https://seanmcbeth.com/@Model.ThumbnailPath" data-rh="true">
    <meta property="og:title" content="Sean T. McBeth - @Model.Name">
    @if (Model.Description is not null)
    {
        <meta property="og:description" content="@Model.Description">
    }
    <bundle-js name="three" versioned />
    <bundle-js name="@(Model.Name + "-app")" versioned />
    <style>
        body {
            background: fixed center/cover url(@Model.ThumbnailPath);
        }
    </style>
}

    @Html.AntiForgeryToken()