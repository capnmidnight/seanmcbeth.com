{
    "version": "2.0.0",
    "inputs": [
      {
        "id": "terminate",
        "type": "command",
        "command": "workbench.action.tasks.terminate",
        "args": "terminateAll"
      }
    ],
    "tasks": [
      {
        "label": "Terminate All Tasks",
        "command": "echo ${input:terminate}",
        "type": "shell",
        "problemMatcher": []
      },
      {
        "label": "build",
        "command": "dotnet",
        "args": [
          "build",
          "./Gurt/Gurt.csproj"
        ],
        "problemMatcher": [
          "$msCompile"
        ]
      }
    ]
}